{
	"$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"correctness": {
				"recommended": true
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false
	},
	"files": {
		"ignore": ["ObsidianRnDVault/.obsidian/plugins/**/*.{js,css}"],
		"include": ["ObsidianRnDVault/.obsidian/plugins/**/data.json"],
		"ignoreUnknown": true
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"globals": ["$", "_", "app"]
	},
	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		},
		"formatter": {
			"enabled": true
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
