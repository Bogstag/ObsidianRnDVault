{
	"$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
	"files": {
		"ignore": ["ObsidianRnDVault/.obsidian"],
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false
	},
	"javascript": {
		"globals": ["$", "_", "app"],
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		},
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"correctness": {
				"recommended": true
			},
			"nursery": { "all": false }
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"clientKind": "git",
		"enabled": false,
		"useIgnoreFile": true
	}
}
